@model Proyecto_Inventarios.Models.Inventarios_Generales.Icarne

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Inventario carne</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.especieanimal)

    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Especie animal
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.especieanimal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.especieanimal, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Tipo de carne
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tipodecarne, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tipodecarne, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Cantidad en libras
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantenlb, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantenlb, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
