@model Proyecto_Inventarios.Models.Inventarios_Generales.Ielectro

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Inventario electrodomesticos</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.marca)


    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Marca
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.marca, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.marca, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Tipo de producto
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tipoproducto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tipoproducto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Peso o tamaño
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pesootamaño, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pesootamaño, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Cantidad existente
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantexistente, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantexistente, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
