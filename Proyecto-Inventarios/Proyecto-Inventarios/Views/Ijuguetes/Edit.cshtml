@model Proyecto_Inventarios.Models.Inventarios_Generales.Ijuguetes

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Inventario juguetes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.tipoproducto)

    <div class="form-group">
        <div class="control-label col-md-2" style="font-weight: 600">
            Tipo de producto
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tipoproducto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tipoproducto, "", new { @class = "text-danger" })
        </div>
        <div class="control-label col-md-2" style="font-weight: 600">
            Cantidad existente
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantexistente, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantexistente, "", new { @class = "text-danger" })
        </div>

    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
