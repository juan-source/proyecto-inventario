@model IEnumerable<Proyecto_Inventarios.Models.Inventarios_Generales.Iverduleria>

@{
    ViewBag.Title = "Index";
}

<h2>Inventario de verduleria</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tipo de producto
        </th>
        <th>
            Cantidad en bultos o canastas
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.tipodeproducto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cantenbultosocanastas)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.tipodeproducto }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.tipodeproducto }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.tipodeproducto })
    </td>
</tr>
}

</table>
<p><a href="/PrimeraClasses/index" class="btn btn-primary btn-lg" style="background-color:#F1C80D">Volver al menu de inventarios &raquo;</a></p>